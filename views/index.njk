{% extends './layouts/default.njk' %}
{% block body %}
<section>
  <header>
    <h2>Active ToDos</h2>
  </header>
  {% if todos.length %}
    <ul>
      {% for todo in todos %}
        <li>
          <dl>
            <dt>ID:</dt>
            <dd>{{ todo.id }}</dd>
            <dt>Title:</dt>
            <dd>{{ todo.title }}</dd>
            <dt>Actions:</dt>
            <dd>
              <ul>
                <li><a href="/{{todo.id}}/edit">Edit</a></li>
                <li><a href="/{{todo.id}}/delete">Delete</a></li>
              </ul>
            </dd>
          </dl>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p>There are no active ToDos. Nice one!</p>
  {% endif %}
</section>
<section>
  <header>
    <h2>Add a ToDo</h2>
  </header>
  <p>
    <a href="/create">Create</a>
  </p>
</section>
<form id="delete" action="/api/todos/delete" method="GET"></form>
{% endblock %}